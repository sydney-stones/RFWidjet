# =============================================================================
# RENDERED FITS - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env to version control!

# -----------------------------------------------------------------------------
# Database (Required)
# -----------------------------------------------------------------------------
DATABASE_URL="postgresql://renderedfits:renderedfits_dev_password@localhost:5432/renderedfits"

# -----------------------------------------------------------------------------
# Redis Cache (Optional - improves performance in production)
# -----------------------------------------------------------------------------
REDIS_URL="redis://localhost:6379"

# -----------------------------------------------------------------------------
# API Configuration (Required)
# -----------------------------------------------------------------------------
NODE_ENV="development"
PORT="3001"
JWT_SECRET="your-jwt-secret-minimum-32-characters-long-change-in-production"

# -----------------------------------------------------------------------------
# Gemini AI (Required for virtual try-on generation)
# -----------------------------------------------------------------------------
GEMINI_API_KEY="your-gemini-api-key-from-google-ai-studio"

# -----------------------------------------------------------------------------
# AWS S3 Storage (Required for image uploads in production)
# -----------------------------------------------------------------------------
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
S3_BUCKET_NAME="renderedfits-uploads"

# -----------------------------------------------------------------------------
# Shopify Integration (Optional - only if using Shopify)
# -----------------------------------------------------------------------------
SHOPIFY_API_KEY="your-shopify-api-key"
SHOPIFY_API_SECRET="your-shopify-api-secret"

# -----------------------------------------------------------------------------
# Application URLs (Update for production)
# -----------------------------------------------------------------------------
APP_URL="http://localhost:3001"
WIDGET_CDN_URL="http://localhost:8081/widget.min.js"
CORS_ORIGIN="http://localhost:5173"

# -----------------------------------------------------------------------------
# Stripe Payment Processing (Optional - for billing)
# -----------------------------------------------------------------------------
STRIPE_SECRET_KEY="sk_test_your_test_key"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"
STRIPE_PRICE_ID_STARTER="price_starter_plan_id"
STRIPE_PRICE_ID_PRO="price_pro_plan_id"

# -----------------------------------------------------------------------------
# Email Service (Optional - for notifications)
# -----------------------------------------------------------------------------
SMTP_HOST="smtp.sendgrid.net"
SMTP_PORT="587"
SMTP_USER="apikey"
SMTP_PASSWORD="your-sendgrid-api-key"
SMTP_FROM="noreply@renderedfits.com"

# -----------------------------------------------------------------------------
# Monitoring & Error Tracking (Optional - recommended for production)
# -----------------------------------------------------------------------------
SENTRY_DSN="your-sentry-dsn-url"

# -----------------------------------------------------------------------------
# Rate Limiting (Optional - defaults to 100 requests per 15 minutes)
# -----------------------------------------------------------------------------
RATE_LIMIT_WINDOW_MS="900000"
RATE_LIMIT_MAX_REQUESTS="100"
